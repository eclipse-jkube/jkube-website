{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "babelOptions": {
      "presets": [
        "babel-preset-gatsby"
      ]
    },
    "requireConfigFile": false
  },
  "rules": {
    // React
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "indent": [2, 2, {
      "SwitchCase": 1
    }]
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended"
  ]
}
